  {
    "name": "HoopsHub",
    "version": "1.5",
    "description": "For all your basketball needs!",
    "icons":
    {
      "16": "./images/hoopshub16.png",
      "48": "./images/hoopshub48.png",
      "128": "./images/hoopshub128.png"
    },
    "browser_action":
    {
      "default_popup": "./index.html",
      "default_title": "HoopsHub"
      
    },
    "manifest_version": 2,
    "permissions":
    [
      "alarms", 
      "notifications",
      "background"
    ],
    "background": 
    {
      "scripts": ["background.js"],
      "persistent": true
    }
  }